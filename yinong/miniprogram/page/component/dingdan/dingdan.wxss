}
.orders-detail {
  position: relative;
  height: 160rpx;
  padding: 35rpx 20rpx 35rpx 170rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail image {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.orders-detail view {
