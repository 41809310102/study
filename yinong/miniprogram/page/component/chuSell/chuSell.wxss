@import '../../common/common.wxss';

page, .main {
  height: 100%;
  overflow-y:hidden;
  width: 750rpx;
  background: white;
}

.meun-city-txt {
  display: block;
  border-bottom: 1rpx solid #e9e9e9;
  width: 30%;
  padding: 25rpx 0;
  font-size: 14px;
}

.meun-city-txt-price {
  display: flex;
  justify-content: center;
}

.meun-txt {
  height: auto;
  color: #696969;
}

over-auto {
  height: 100rpx;
  overflow: auto;
}

.search {
  padding: 20rpx;
  
}

.search-text {
  background: rgb(235, 235, 235);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  font-size: 30rpx;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}

.search-text icon {
  margin-right: 10rpx;
}

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}

.categroy-left .cate-list.on {
  color: #ab956d;
  border-color: #ab956d;
}

.swiper-tab {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  background: rgb(254, 254, 252);
  border-bottom: 1rpx solid #aaa;
  border-top: 1rpx solid #aaa;
  align-items: center;
  padding-left:6%; 
}

.swiper-item {
  display: flex;
  width:25%;
  color: black;
  font-size: 30rpx;
}

.active {
  color: red;
}

.category {
  justify-items: center;
  align-items: center;
  margin: 10rpx 20rpx;
  height: 250rpx;
  border-radius: 15rpx;
  border-bottom: 2rpx solid #aaa;
  background-color: white;
  display: flex;
}

.category-child {
  display: flex;
  height: 200rpx;
  width: 200rpx;
  margin-left:10rpx; 
  justify-items: center;
  align-items: center;
}

.category-child image {
  width: 200rpx;
  height: 200rpx;
}

.ago_price {
  text-decoration: line-through;
  margin-top: 20rpx;
  opacity: 0.7;
  height: 30rpx;
  font-size: 28rpx;
}

.category-next-child {
  margin-top: 20rpx;
  font-size: 30rpx;
  overflow: hidden;/*隐藏溢出的文本*/
  width: 400rpx;/*必须加上固定的宽度*/
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 自动换行 */
}

.category-next {
  margin-left: 40rpx;
}

.newest-text-child {
  opacity: 0.5;
  display: flex;
  width: 220rpx;
  /* margin-top: 8rpx; */
  margin-left: 10rpx;
  font-size: 23rpx;
  color: black;
}

.newest-text {
  display: flex;
  font-size: 30rpx;
  color: #e6343a;
  margin-top: 30rpx;
  align-items: center;
  width: 400rpx;
  justify-items: center;
}
.cruuent_price{
  width: 150rpx;
  font-size: 30rpx;
}
.newest-text image {
  margin-left: 60rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.shaixuan-next {
  margin: 0rpx 20rpx;
  height: 70rpx;
  align-items: center; /* 文字居中 ：子容器在父容器居中 margin: auto;或者在父容器中使用align-items: center;
  justify-content:center; display: flex;*/
  justify-content: center;
  font-size: 30rpx;
  display: flex;
  opacity: 0.7;
  background-color: white;
  border-top: 1px solid #ededed;
}
.quan{
  margin-left:-7rpx; 
}
.bottom{
  height: 100rpx;
  width: 100%;
  background: rgb(254, 254, 252);
  display: flex;
  flex-direction:row;
  position: absolute;
  bottom: 0rpx;
  align-items: center;
  justify-items: center;
}
.bottom_child{
  display: flex;
  width: 33.3%;
  flex-direction:column;
  height: 150rpx;
  padding-top:45rpx;
  align-items: center;
  justify-items: center;
  font-size: 30rpx;
  border-left: 1rpx solid #ededed;
}
.bottom_child1{
  height: 150rpx;
  width: 33.3%;
  font-size: 30rpx;
  border-left: 1rpx solid #ededed;
  line-height: 150rpx;
  text-align: center;
}
.ago_price-pr{
    display: flex;
    flex-direction: row;
}
.time{
  border: 1rpx solid #e6343a;
  color: #e6343a;
  font-size: 22rpx;
  margin-top:35rpx;
}
.bottom_child.number2{
    width: 25%;
}
.bottom_child1.number2{
    width: 25%;
}
.bottom_child1.zhuye{
    width: 25%;
    background-color: #dfdfdf;
}
.newest-text-child.on{
  width: 120rpx;
}
.newest-text-child.on1{
  color:red;
  width: 120rpx;
  margin-left: 20rpx;
}
.tuikuan{
  width: 100%;
  height: 700rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  opacity: 0.7;
  font-size:32rpx; 
}
.tuikuan image{
  width: 150rpx;
  height: 150rpx;
}