page .main {
  height: 100%;
  background-color: rgb(214, 213, 213);
}

.shangchuan {
  height: 250rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image1 {
  height: 100rpx;
  width: 100rpx;
}
.image2{
  width: 100%;
}
.title {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.title textarea {
  background-color: white;
  height: 80rpx;
  font-size: 32rpx;
  width: 100%;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.type {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.type text {
  font-size: 30rpx;
  width: 300rpx;
  margin-left: 20rpx;
  opacity: 0.8;
}

.type view picker {
  font-size: 30rpx;
  width: 250rpx;
  margin-left: 165rpx;
  opacity: 0.8;
  margin-top: -5rpx;
}

.bianma {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.bianma text {
  font-size: 30rpx;
  width: 300rpx;
  margin-left: 20rpx;
  opacity: 0.8;
}

.bianma view {
  margin-left: 200rpx;
  font-size: 30rpx;
}

.button {
  display: flex;
  flex-direction: row;
  height: 80rpx;
}

.button1 {
  width: 50%;
  height: 80rpx;
  font-size: 35rpx;
  background-color: rgb(16, 118, 202);
  opacity: 0.8;
  border-radius: 0;
}

.button2 {
  width: 50%;
  height: 80rpx;
  font-size: 35rpx;
  border-radius: 0;
  background-color: rgb(16, 118, 202);
}

.input {
  width: 100%;
  font-size: 30rpx;
  opacity: 0.8;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}
