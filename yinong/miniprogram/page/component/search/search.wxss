@import '../../common/common.wxss';

.search-box {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding-top: 26rpx;
}

.input {
  display: flex;
  width: 680rpx;
  margin-left: 35rpx;
 
}

.search-input {
  height: 60rpx;
  width:100%;
  line-height: 60rpx;
  padding: 0 20rpx 0 54rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 29rpx;
  border: 2rpx solid #ddd;
}

.search-icon {
  position: absolute;
  left: 50rpx;
  top: 44rpx;
  width: 35rpx;
  height: 35rpx;
}

.search-btn {
  font-size: 28rpx;
  width: 100rpx;
  line-height: 64rpx;
}

.title {
  font-size: 32rpx;
  margin: 30rpx 0;

}

.title text {
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.tags text {
  display: inline-block;
  font-size: 28rpx;
  padding: 6rpx 20rpx;
  border: 2rpx solid #ddd;
  color: #aaa;
  margin: 0 30rpx 20rpx 0;
  border-radius: 40rpx;
  word-break: break-all;
}
.tags{
  width: 600rpx;
  height: 100%;
  margin-left: 30rpx;
}
