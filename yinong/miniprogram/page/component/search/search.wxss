.null-tips {
  padding: 200rpx 0;
  text-align: center;
  color: #787878;
}

/* 相关推荐 */

.recommend-title {
  position: relative;
  height: 0;
  width: 1005;
  border-bottom: 1px solid #f0f0f1;
  margin-bottom: 42rpx;
}

.recommend-title text {
  position: absolute;
  left: 50%;
  top: -20rpx;
  width: 150rpx;
  height: 40rpx;
  margin-left: -75rpx;
  line-height: 40rpx;
  background: #fff;
  color: #5e5e5e;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 1px;
}

.newest-box {
  margin-top: 30rpx;
  padding: 0 40rpx;
}

.newest-box .newest-list {
  display: inline-block;
  width: 325rpx;
  height: 560rpx;
  margin: 0 20rpx 20rpx 0;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  text-align: center; /*图片和文字居中 */
  background: white;
}

.newest-box .newest-list:nth-child(2n) {
  margin-right: 0;
}

.newest-box .newest-list image {
  width: 325rpx;
  height: 400rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  margin: 0;
}

.newest-text-child {
  opacity: 0.5;
  display: flex;
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
  color: black;
}

.newest-box .newest-list .newest-text {
  display: flex;
  font-size: 30rpx;
  color: #e6343a;
  padding-top: 30rpx;
}

.newest-text1 {
  overflow: hidden;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
